@model List<Product>
<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="ProductUpsert" class="btn btn-outline-primary">
                <i class="bi bi-house-door"></i> Create
            </a>
            <a asp-area="" asp-controller="" asp-action="" class="btn btn-primary">
                <i class="bi bi-house-door"></i> Home
            </a>
        </div>
    </div>
    <table id="tblData"  class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> 
                    Title
                </th>
                <th>
                    BarCode 
                </th>
                <th>
                    Author
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>

                </th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}