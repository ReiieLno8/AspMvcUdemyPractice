@model List<Product>
<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="bi bi-house-door"></i> Create
            </a>
            <a asp-controller="" asp-action="" class="btn btn-primary">
                <i class="bi bi-house-door"></i> Home
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped align-middle text-center">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    BarCode
                </th>
                <th>
                    Author
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>

                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="ProductEdit" asp-route-id="@obj.Id" class="btn btn-outline-primary" style="width:100%">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="ProductDelete" asp-route-id="@obj.Id" class="btn btn-outline-danger" style="width:100%">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>