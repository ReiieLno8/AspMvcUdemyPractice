@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            <h2 class="text-primary">
                Create Product
            </h2>
        </div>
        <div asp-validation-summary="All"></div> <!--Error Summary printed on top-->
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" /> <!--No need to add type="text" bec the tag helper knows that Name contains string-->
            <span asp-validation-for="Title" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-0"></label> <!--No need to put text in the label since we are using tag helper-->
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span> <!--Error Message-->
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-primary form-control" asp-controller="Home" asp-action="ProductCreate">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="" asp-action="" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        /*_ValidationScriptsPartial file under Shared folder is a script file for client side validation. name should be match in order to work, tag helper "partial" by default it will look for shared folder */
    }
}